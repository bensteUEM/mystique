{
  "manifest_version": 2,

  "name": "Mystique",
  "description": "Produce noise in the background while normally surfing the web by opening random websites connected to a specified stereotype",
  "author": "DHBW.CAS.ADM.2K17",
  "homepage_url": "https://mystique-extension.jimdo.com/",
  "version": "1.0",
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["libs/urlLib.js", "libs/bluebird.js","libs/jquery-3.2.1.min.js", "background.js"]
  },
  "permissions": [
    "activeTab", "http://*/*", "https://*/*",
    "storage"
  ],
   "icons": {
    "128": "icon.png"
  }
}
