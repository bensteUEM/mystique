{
  "manifest_version": 2,

  "name": "Mystique",
  "description": "This extension generates random user profiles in order to confuse trackers",
  "version": "1.0",
  "options_page": "options.html",

  "browser_action": {
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["libs/urlLib.js", "libs/bluebird.js","libs/jquery-3.2.1.min.js", "background.js"]
  },
  "content_scripts": [{
     "matches": [
            "http://*/*",
            "https://*/*"
            ],
    "js": ["contentScript.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "activeTab",
  "storage"
  ],
   "icons": {
    "128": "icon.png"
  }
}
